<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Absence">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_heading"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/lnr_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_morning"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_absence_session"

                android:drawableStart="@drawable/icon_cancel_deselect"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="Morning"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_morning_select"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_absence_session_select"

                android:drawableStart="@drawable/icon_cancel"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="Morning"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_evening"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_absence_session"

                android:drawableStart="@drawable/icon_cancel_deselect"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="Evening"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_evening_select"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_absence_session_select"

                android:drawableStart="@drawable/icon_cancel"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="Evening"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_both"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_absence_session"
                android:drawableStart="@drawable/icon_cancel_deselect"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="Both"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_both_select"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_absence_session_select"
                android:drawableStart="@drawable/icon_cancel"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="Both"
                android:textAllCaps="false"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/lnr_session"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_month"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="200dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_month_date"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="6"
                android:layout_height="200dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar"
        android:layout_marginTop="-50dp"
        android:background="@drawable/action_bar_gradient">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/blue_gradient_home"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_shadow" />

        <Button
            android:id="@+id/btn_location_back"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/bg_btn_next_forward"
            android:drawableLeft="@drawable/icon_back"
            android:paddingLeft="10dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_location_back"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Mark Absence"
            android:textColor="@color/sec_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_kid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Kid Name : Yuthmika Sehas"
            android:textColor="@color/sec_color"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/action_bar_gradient">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/status_logo" />


    </RelativeLayout>

</RelativeLayout>