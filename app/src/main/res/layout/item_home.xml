<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_selection"
    android:layout_width="match_parent"

    android:layout_height="115dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_item_home">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_home_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/item_home_image"
        app:riv_corner_radius_bottom_left="50dp"
        app:riv_corner_radius_top_left="50dp" />

    <TextView
        android:id="@+id/txt_function_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/icon_home_next"
        android:layout_toLeftOf="@id/icon_home_next"
        android:layout_toEndOf="@id/item_home_image"
        android:layout_toRightOf="@id/item_home_image"
        android:fontFamily="@font/nunito_bold"
        android:text="Current Journey"
        android:textColor="@color/dark_blue"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/icon_home_next"
        android:layout_toLeftOf="@id/icon_home_next"
        android:layout_toEndOf="@id/item_home_image"
        android:layout_toRightOf="@id/item_home_image"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/function_icon_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_location" />

            <TextView
                android:id="@+id/function_heading_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:fontFamily="@font/nunito_bold"
                android:paddingLeft="3dp"
                android:text="Live Location"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/function_icon_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_video" />

            <TextView
                android:id="@+id/function_heading_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:fontFamily="@font/nunito_bold"
                android:paddingLeft="3dp"
                android:text="Live footage"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/icon_home_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_home_next" />

</RelativeLayout>