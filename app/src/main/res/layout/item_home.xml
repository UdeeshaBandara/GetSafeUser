<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_selection"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginHorizontal="5dp"
    app:strokeColor="@color/colorPrimary"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"

    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_home_image"
            android:layout_width="145dp"
            android:layout_height="115dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home0"
            app:riv_corner_radius_bottom_left="20dp"
            app:riv_corner_radius_top_left="20dp" />

        <TextView
            android:id="@+id/txt_option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/icon_home_next"
            android:layout_toLeftOf="@id/icon_home_next"
            android:layout_toEndOf="@id/item_home_image"
            android:layout_toRightOf="@id/item_home_image"
            android:fontFamily="@font/nunito_bold"
            android:text="Current Journey"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@id/icon_home_next"
            android:layout_toLeftOf="@id/icon_home_next"
            android:layout_toEndOf="@id/item_home_image"
            android:layout_toRightOf="@id/item_home_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/option_icon_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:id="@+id/option_heading_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:fontFamily="@font/nunito_bold"
                    android:paddingLeft="3dp"
                    android:text="Live Location"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/icon_home_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_home_next" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>