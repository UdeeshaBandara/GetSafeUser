<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlt_kid_edit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"

    app:cardUseCompatPadding="true"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"


        android:padding="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_kid"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/white"
            app:riv_corner_radius="80dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txt_kid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_kid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_regular"
            android:text="Yuthmika Sehas"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_kid_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_kid_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_regular"
            android:text="Vidura College waththala in"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>