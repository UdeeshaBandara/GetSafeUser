<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".Register">


    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/main_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_logo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/register_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="One more step"
                android:textSize="28sp" />

            <RelativeLayout
                android:id="@+id/register_sub_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_heading">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="28dp"
                    android:alpha="0.2"
                    android:background="@color/black" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edittext"
                    android:fontFamily="@font/nunito_regular"
                    android:paddingHorizontal="10dp"

                    android:paddingVertical="5dp"
                    android:text="Select your location"
                    android:textColor="@color/button_blue"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_sub_heading"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/txt_address_one"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_address_one"

                    android:layout_marginTop="15dp"

                    android:background="@drawable/custom_edittext"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:hint="Address line two"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:paddingRight="10dp"

                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_address_two"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_address_one"

                    android:layout_marginTop="15dp"

                    android:background="@drawable/custom_edittext"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:hint="Address line two"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:paddingRight="10dp"

                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginTop="15dp"

                    android:background="@drawable/custom_edittext"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:hint="City"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:paddingRight="10dp"

                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/txt_address_pick"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/txt_city"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/custom_edittext">

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="80dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center_horizontal"
                        android:hint="Pin your location"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_loc"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/icon_pin_location" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lnr_drop_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.2"
                            android:layout_marginTop="32dp"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/custom_edittext"
                            android:fontFamily="@font/nunito_regular"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="Enter drop-off location"
                            android:textColor="#E91E63"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/txt_address_drop_one"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/txt_address_one"

                        android:layout_marginTop="15dp"

                        android:background="@drawable/custom_edittext"
                        android:ellipsize="end"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:hint="Address line two"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:paddingRight="10dp"

                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_address_drop_two"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/txt_address_one"

                        android:layout_marginTop="15dp"

                        android:background="@drawable/custom_edittext"
                        android:ellipsize="end"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:hint="Address line two"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:paddingRight="10dp"

                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/txt_address_drop_pick"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/txt_city"
                        android:layout_marginTop="15dp"

                        android:background="@drawable/custom_edittext">

                        <TextView
                            android:id="@+id/txt_drop_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"

                            android:layout_marginRight="80dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_horizontal"
                            android:hint="Drop-off location"
                            android:maxLines="1"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/icon_pin_location" />


                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">


                    <Button
                        android:id="@+id/btn_register_finish"
                        android:layout_width="110dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_btn_next_forward"
                        android:drawableRight="@drawable/icon_forward"
                        android:paddingRight="10dp"
                        android:text="Finish"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>