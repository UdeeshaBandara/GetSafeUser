<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context=".EditProfile">

    <RelativeLayout
        android:id="@+id/card_heading"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/bg_add_kid">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"

                android:fontFamily="@font/nunito_bold"
                android:text="Edit your details"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnr_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/kid_animation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/driver_profile_pic"
            android:visibility="visible" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lnr_image"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="60dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/kidsNameBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txt_parent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/bg_blank_for_edit"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:lines="2"

                                android:maxLines="2"
                                android:text="Udeesha Induras"
                                android:textColor="@color/black"
                                android:textSize="22sp" />

                            <ImageView
                                android:id="@+id/icon_edit"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toEndOf="@+id/txt_parent_name"
                                android:src="@drawable/icon_edit" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_number_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/kidsNameBox"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/phone_number_label"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Phone Number"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_bold"
                                android:maxLines="1"
                                android:text="0774 78 79 78"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:src="@drawable/icon_home_next"
                                android:text="Edited"
                                android:visibility="visible" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/phone_number_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/SplitLine_hor2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFD5D6D6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/email_label"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/txt_location"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_blank_for_edit"
                                android:fontFamily="@font/nunito_bold"
                                android:text="udeeshabandara@gmail.com"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:src="@drawable/icon_home_next"
                                android:text="Edited"
                                android:visibility="visible" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/email_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/SplitLine_hor3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFD5D6D6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/kid_name_bdy_label"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center_vertical"
                                android:hint="Location"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/review_kid_dob"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Gajaba road,makola"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:src="@drawable/icon_home_next"
                                android:text="Edited"
                                android:visibility="visible" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/kid_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/location_main"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/SplitLine_hor4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFD5D6D6" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/kid_list_label"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center_vertical"
                            android:hint="Your kids (Select to edit)"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:clipToPadding="true"
                            android:overScrollMode="never"
                            android:paddingLeft="15dp"
                            android:scrollbars="none" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/main_save_animation"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"

        android:visibility="gone"
        app:lottie_rawRes="@raw/add_kid_confirmation" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_button_contact_driver"
        android:text="Save"
        android:textAllCaps="false" />

</RelativeLayout>