<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/rlt_item_student"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/kid_selector"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_selected_kid"
        android:layout_height="60dp" />

    <RelativeLayout
        android:id="@+id/rlt_transport_services"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"

        android:layout_marginLeft="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/child_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:src="@drawable/user_icon"
            app:riv_corner_radius="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/child_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/nunito_semibold"
                android:text="Udeesha Bandara"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/student_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Mahanama College"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>